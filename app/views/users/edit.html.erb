<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>  <span class="label label-primary">required</span>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email %>  <span class="label label-primary">required</span>
      <%= f.text_field :email, class: "form-control" %>
      
      <%= f.label :age %>  <span class="label label-default">from 1 to 120</span>
      <%= f.text_field :age, class: "form-control" %>
      
      <%= f.label :address %>  <span class="label label-default">100 to character</span>
      <%= f.text_field :address, class: "form-control" %>
      
      <%= f.label :remarks %>  <span class="label label-default">200 to character</span>
      <%= f.text_area :remarks, class: "form-control", rows: 5 %>
      
      <%# パスワード設定・暗号化(password_digest) %>
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>